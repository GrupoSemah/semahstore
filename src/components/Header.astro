---
import { CartIcon } from './react/CartIcon.jsx';
import { SearchBar } from './react/SearchBar';
import { ThemeToggle } from './react/ThemeToggle';
import { Image } from 'astro:assets';
import logo from '../assets/semahLogo.png';
---

<header class="bg-background/95 shadow-sm sticky top-0 z-50 border-b border-border/40">
  <div class="container mx-auto px-4 py-3 md:py-4">
    <!-- Version móvil - Layout diferente para mejor usabilidad -->
    <div class="md:hidden">
      <div class="flex items-center justify-between mb-3">
        <!-- Logo más compacto en móvil -->
        <a href="/" class="flex items-center gap-1 flex-shrink-0 group">
          <Image 
            src={logo} 
            alt="SEMAH" 
            width={200}
            height={30}
            quality="max"
            class="w-auto h-8 object-contain"
            loading="eager"
          />
          <span class="bg-[#FF6B1E] text-white text-sm font-semibold px-2 py-0.5 rounded-full group-hover:bg-[#FF6B1E]/90 transition-colors">
            Store
          </span>
        </a>
        <!-- Controles a la derecha -->
        <div class="flex items-center gap-2">
          <ThemeToggle client:load />
          <CartIcon client:load />
        </div>
      </div>
      <!-- Barra de búsqueda a ancho completo en móvil -->
      <div class="w-full">
        <SearchBar client:load />
      </div>
    </div>

    <!-- Version desktop - Layout original mejorado -->
    <div class="hidden md:flex items-center gap-4">
      <a href="/" class="flex items-center gap-2 flex-shrink-0 group">
        <Image 
          src={logo} 
          alt="SEMAH" 
          width={300}
          height={40}
          quality="max"
          class="w-auto h-10 object-contain"
          loading="eager"
        />
        <span class="bg-[#FF6B1E] text-white text-lg font-semibold px-3 py-1 rounded-full group-hover:bg-[#FF6B1E]/90 transition-colors">
          Store
        </span>
      </a>
      <div class="flex-1">
        <SearchBar client:load />
      </div>
      <div class="flex items-center gap-3">
        <ThemeToggle client:load />
        <CartIcon client:load />
      </div>
    </div>
  </div>
</header>

