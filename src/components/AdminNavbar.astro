---
const pathname = Astro.url.pathname;
---

<div class="border-b mb-6">
  <nav class="container mx-auto px-4 flex gap-1 md:gap-4 overflow-x-auto py-2 text-sm md:text-base">
    <a 
      href="/admin"
      class={`px-3 py-2 transition-colors hover:bg-muted rounded-md ${pathname === '/admin' ? 'font-medium text-primary border-b-2 border-primary' : 'text-muted-foreground'}`}
    >
      Dashboard
    </a>
    <a 
      href="/admin/reservations"
      class={`px-3 py-2 transition-colors hover:bg-muted rounded-md ${pathname === '/admin/reservations' ? 'font-medium text-primary border-b-2 border-primary' : 'text-muted-foreground'}`}
    >
      Reservas
    </a>
    <a 
      href="/admin/offers" 
      class={`px-3 py-2 transition-colors hover:bg-muted rounded-md ${pathname === '/admin/offers' ? 'font-medium text-primary border-b-2 border-primary' : 'text-muted-foreground'}`}
    >
      Ofertas
    </a>
  </nav>
</div>
